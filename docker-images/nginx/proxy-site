# Default server configuration
#
lua_package_path '/etc/nginx/scripts/?.lua;;';

server {
        listen 8888 default_server;
        listen [::]:8888 default_server;

        # SSL configuration
        #
        # listen 443 ssl default_server;
        # listen [::]:443 ssl default_server;
        #
        # Self signed certs generated by the ssl-cert package
        # Don't use them in a production server!
        #
        # include snippets/snakeoil.conf;

        root /var/www/html;

        # Add index.php to the list if you are using PHP
        index index.html index.htm index.nginx-debian.html;

        server_name _;

        #location / {
                # First attempt to serve request as file, then
                # as directory, then fall back to displaying a 404.
                #try_files $uri $uri/ =404;
        #}
        location / {
                expires off;
                default_type 'text/plain';
                set_by_lua $filter_result '
                        local jwt = require "luajwt"
                        local header = ngx.req.get_headers()["x-auth"]

                        local result = "default"
                        if header ~= nil then
                                -- parse the token and read out the email info
                                local output, err = jwt.decode(header)
                                if (output ~= nil and output["email"] ~= nil) then
                                        if (output["email"] == "test@cn.ibm.com") then
											result = "new_version"
                                
                                end
                        end
                        return result
                ';
                if ($filter_result = 'default') {
                        proxy_pass http://wen-v1:9080;
                        break;
                }
                proxy_pass http://wen-v2:9080;
        }
}
